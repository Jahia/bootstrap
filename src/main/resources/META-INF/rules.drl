package org.jahia.modules.bootstrap.rules

// list any import classes here.
import org.jahia.services.content.rules.*
import org.jahia.services.content.JCRContentUtils
import org.slf4j.Logger

expander rules.dsl

// declare any global variables here
global User user
global Service service
global Logger logger
global JCRContentUtils jcrUtils
global BootstrapCompiler bootstrapCompiler

rule "Set bootstrap folder ACL and publish it"
  when
    A new node is created
      - the node has the type jnt:folder
      - its path matches /sites/[\\p{Alnum}\\-_]+/files/bootstrap
  then
    Break all ACL inheritance on the node
    Grant role reader on the node to the group users
    Grant role reader on the node to the user guest
    Grant role privileged on the node to the group privileged
    Publish subtree rooted at that node
end

rule "Compile templatesSet bootstrap.css"
  when
    A property j:deployementDate has been set on a node
      - the node has the type jnt:versionInfo
    The node has a parent
     - the parent has the type jnt:moduleVersion
    The property j:moduleType has the value "templatesSet" on the parent
    The property j:dependencies contains the value "bootstrap" on the parent
  then
    Compile bootstrap.css for the parent
end
